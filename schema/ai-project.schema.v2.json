{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Project Configuration v2",
  "description": "Configuration schema for shared-ai-configs with services grouping",
  "type": "object",
  "required": ["project", "stack", "commands"],
  "properties": {
    "project": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "description": "Full project name" },
        "short_name": { "type": "string", "description": "Short name for templates" },
        "description": { "type": "string" },
        "role": { "type": "string", "default": "Senior Developer" },
        "language": { "type": "string", "enum": ["Russian", "English"], "default": "English" }
      }
    },
    "stack": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["react", "node", "java", "python", "nextjs"] },
        "framework": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "language": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "build": {
          "type": "object",
          "properties": {
            "tool": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "ui": {
          "type": "object",
          "properties": {
            "library": { "type": "string" },
            "version": { "type": "string" },
            "styling": { "type": "string" }
          }
        },
        "state": {
          "type": "object",
          "properties": {
            "server": { "type": "string" },
            "client": { "type": "string" }
          }
        },
        "api": {
          "type": "object",
          "properties": {
            "codegen": { "type": "string" },
            "client": { "type": "string" },
            "mocks": { "type": "string" }
          }
        },
        "testing": { "type": "string" },
        "linter": { "type": "string" },
        "auth": { "type": "string" },
        "runtime": { "type": "string" }
      }
    },
    "architecture": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["FSD", "Clean", "Layered", "Modular"] },
        "structure": { "type": "string", "description": "ASCII tree of project structure" },
        "import_rule": { "type": "string" }
      }
    },
    "services": {
      "type": "object",
      "description": "External services and tools configuration",
      "properties": {
        "ide": {
          "type": "object",
          "description": "IDE configuration",
          "properties": {
            "primary": { "type": "string", "enum": ["Cursor", "VSCode", "WebStorm", "Neovim"] },
            "secondary": { "type": "string", "enum": ["Claude Code", "Cursor", "VSCode", "none"] },
            "dual_mode": { "type": "boolean", "default": false },
            "paths": {
              "type": "object",
              "properties": {
                "claude": { "type": "string", "default": ".claude/" },
                "cursor": { "type": "string", "default": ".cursor/" }
              }
            }
          }
        },
        "vcs": {
          "type": "object",
          "description": "Version control system",
          "properties": {
            "type": { "type": "string", "enum": ["gitlab", "github", "bitbucket", "none"] },
            "main_branch": { "type": "string", "default": "main" },
            "project_id": { "type": "integer" },
            "group": { "type": "string" }
          }
        },
        "task_tracking": {
          "type": "object",
          "description": "Task tracking system",
          "properties": {
            "type": { "type": "string", "enum": ["beads", "jira", "linear", "github-issues", "none"] },
            "key_prefix": { "type": "string" },
            "paths": {
              "type": "object",
              "properties": {
                "beads": { "type": "string", "default": ".beads/" },
                "perles": { "type": "string", "default": ".perles/" }
              }
            },
            "jira": {
              "type": "object",
              "properties": {
                "instance": { "type": "string" },
                "board_id": { "type": "integer" }
              }
            }
          }
        },
        "mcp": {
          "type": "object",
          "description": "MCP servers configuration",
          "properties": {
            "hindsight": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false }
              }
            },
            "snyk": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false }
              }
            },
            "context7": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false }
              }
            },
            "pal": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false }
              }
            },
            "memory_bank": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false }
              }
            },
            "figma": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false }
              }
            },
            "browser": {
              "type": "object",
              "properties": {
                "enabled": { "type": "boolean", "default": false }
              }
            }
          }
        }
      }
    },
    "commands": {
      "type": "object",
      "description": "Project CLI commands (just strings, no semantic meaning)",
      "required": ["dev", "build"],
      "properties": {
        "dev": { "type": "string", "description": "Development server" },
        "build": { "type": "string", "description": "Production build" },
        "lint": { "type": "string" },
        "test": { "type": "string" },
        "codegen": { "type": "string" },
        "quality_gates": { "type": "string" }
      },
      "additionalProperties": { "type": "string" }
    },
    "options": {
      "type": "object",
      "description": "AI assistant behavior options",
      "properties": {
        "dev_server_port": { "type": "integer" },
        "token_optimization": { "type": "string" },
        "sdd_enabled": { "type": "boolean", "default": false },
        "orchestration": { "type": "boolean", "default": false },
        "agentic_workflows": { "type": "boolean", "default": false },
        "model_switching": { "type": "string" },
        "skip_rules": {
          "type": "object",
          "properties": {
            "enhancement": { "type": "string" },
            "bugfix": { "type": "string" },
            "simple_fix": { "type": "string" }
          }
        }
      }
    },
    "rules": {
      "type": "object",
      "description": "Project-specific rules",
      "properties": {
        "critical": {
          "type": "array",
          "description": "Non-negotiable rules that MUST be followed",
          "items": { "type": "string" }
        },
        "custom": {
          "type": "array",
          "description": "Additional project-specific rules",
          "items": { "type": "string" }
        }
      }
    },
    "generation": {
      "type": "object",
      "description": "What to generate",
      "properties": {
        "targets": {
          "type": "object",
          "properties": {
            "claude": { "type": "boolean", "default": true, "description": ".claude/ directory" },
            "cursor": { "type": "boolean", "default": true, "description": ".cursor/ directory" },
            "beads": { "type": "boolean", "default": false, "description": ".beads/ directory" },
            "perles": { "type": "boolean", "default": false, "description": ".perles/ directory" },
            "ignore_files": { "type": "boolean", "default": true, "description": ".cursorignore, etc" },
            "claude_md": { "type": "boolean", "default": true, "description": "CLAUDE.md root file" }
          }
        },
        "strategy": {
          "type": "string",
          "enum": ["generate", "symlink", "copy"],
          "default": "generate"
        }
      }
    }
  }
}
