{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Project Configuration",
  "description": "Configuration schema for shared-ai-configs with services grouping",
  "type": "object",
  "required": ["project", "stack", "commands"],
  "properties": {
    "project": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "description": "Full project name" },
        "short_name": { "type": "string", "description": "Short name for templates" },
        "description": { "type": "string" },
        "role": { "type": "string", "default": "Senior Developer" }
      }
    },
    "languages": {
      "type": "object",
      "description": "Language settings for AI communication and code",
      "properties": {
        "chat": {
          "type": "string",
          "enum": ["Russian", "English"],
          "default": "English",
          "description": "Language for AI communication (plans, analysis, reports)"
        },
        "code": {
          "type": "string",
          "enum": ["English"],
          "default": "English",
          "description": "Language for code comments (always English per ESLint)"
        }
      }
    },
    "stack": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": { "type": "string", "enum": ["react", "node", "java", "python", "nextjs"] },
        "framework": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "language": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "build": {
          "type": "object",
          "properties": {
            "tool": { "type": "string" },
            "version": { "type": "string" }
          }
        },
        "ui": {
          "type": "object",
          "properties": {
            "library": { "type": "string" },
            "version": { "type": "string" },
            "styling": { "type": "string" }
          }
        },
        "state": {
          "type": "object",
          "properties": {
            "server": { "type": "string" },
            "client": { "type": "string" }
          }
        },
        "api": {
          "type": "object",
          "properties": {
            "codegen": { "type": "string" },
            "client": { "type": "string" },
            "mocks": { "type": "string" }
          }
        },
        "testing": { "type": "string" },
        "linter": { "type": "string" },
        "auth": { "type": "string" },
        "runtime": { "type": "string" }
      }
    },
    "architecture": {
      "type": "object",
      "properties": {
        "type": { "type": "string", "enum": ["FSD", "Clean", "Layered", "Modular"] },
        "structure": { "type": "string", "description": "ASCII tree of project structure" },
        "import_rule": { "type": "string" }
      }
    },
    "services": {
      "type": "object",
      "description": "External services and tools configuration",
      "properties": {
        "ide": {
          "type": "object",
          "description": "IDE configuration",
          "properties": {
            "primary": { "type": "string", "enum": ["Cursor", "VSCode", "WebStorm", "Neovim"] },
            "secondary": { "type": "string", "enum": ["Claude Code", "Cursor", "VSCode", "none"] },
            "dual_mode": { "type": "boolean", "default": false },
            "paths": {
              "type": "object",
              "properties": {
                "claude": { "type": "string", "default": ".claude/" },
                "cursor": { "type": "string", "default": ".cursor/" }
              }
            }
          }
        },
        "vcs": {
          "type": "object",
          "description": "Version control system",
          "properties": {
            "type": { "type": "string", "enum": ["gitlab", "github", "bitbucket", "none"] },
            "main_branch": { "type": "string", "default": "main" },
            "project_id": { "type": "integer" },
            "group": { "type": "string" }
          }
        },
        "task_tracking": {
          "type": "object",
          "description": "Task tracking system",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["beads", "jira", "linear", "github-issues", "none"]
            },
            "key_prefix": { "type": "string" },
            "paths": {
              "type": "object",
              "properties": {
                "beads": { "type": "string", "default": ".beads/" },
                "perles": { "type": "string", "default": ".perles/" }
              }
            },
            "jira": {
              "type": "object",
              "properties": {
                "instance": { "type": "string" },
                "board_id": { "type": "integer" }
              }
            }
          }
        },
        "mcp": {
          "type": "object",
          "description": "MCP servers configuration",
          "properties": {
            "hindsight": { "$ref": "#/definitions/MCPServerConfig" },
            "snyk": { "$ref": "#/definitions/MCPServerConfig" },
            "context7": { "$ref": "#/definitions/MCPServerConfig" },
            "memory_bank": { "$ref": "#/definitions/MCPServerConfig" },
            "figma": { "$ref": "#/definitions/MCPServerConfig" },
            "browser": { "$ref": "#/definitions/MCPServerConfig" },
            "web_search": { "$ref": "#/definitions/MCPServerConfig" },
            "chrome": { "$ref": "#/definitions/MCPServerConfig" }
          },
          "additionalProperties": { "$ref": "#/definitions/MCPServerConfig" }
        }
      }
    },
    "commands": {
      "type": "object",
      "description": "Project CLI commands (just strings, generator doesn't interpret them)",
      "required": ["dev", "build"],
      "properties": {
        "dev": { "type": "string", "description": "Development server" },
        "build": { "type": "string", "description": "Production build" },
        "lint": { "type": "string" },
        "test": { "type": "string" },
        "codegen": { "type": "string" },
        "quality_gates": { "type": "string" }
      },
      "additionalProperties": { "type": "string" }
    },
    "options": {
      "type": "object",
      "description": "AI assistant behavior options",
      "properties": {
        "dev_server_port": { "type": "integer" },
        "token_optimization": { "type": "string" },
        "sdd_enabled": { "type": "boolean", "default": false },
        "orchestration": { "type": "boolean", "default": false },
        "agentic_workflows": { "type": "boolean", "default": false },
        "model_switching": { "type": "string" },
        "skip_rules": {
          "type": "object",
          "properties": {
            "enhancement": { "type": "string" },
            "bugfix": { "type": "string" },
            "simple_fix": { "type": "string" }
          }
        }
      }
    },
    "rules": {
      "type": "object",
      "description": "Project-specific rules (non-negotiable constraints)",
      "properties": {
        "never": {
          "type": "array",
          "description": "Actions that are FORBIDDEN - AI must refuse these",
          "items": { "type": "string" }
        },
        "always": {
          "type": "array",
          "description": "Actions that are MANDATORY - AI must always do these",
          "items": { "type": "string" }
        },
        "custom": {
          "type": "array",
          "description": "Additional project-specific guidelines (non-critical)",
          "items": { "type": "string" }
        }
      }
    },
    "plugins": {
      "type": "object",
      "description": "CLI tools and plugins to install",
      "properties": {
        "install": {
          "type": "array",
          "description": "Plugins to install during setup",
          "items": {
            "type": "object",
            "required": ["name"],
            "properties": {
              "name": { "type": "string", "description": "Plugin name (bd, jlab, gha, bits)" },
              "version": { "type": "string" },
              "source": {
                "type": "string",
                "enum": ["npm", "cargo", "pip", "brew", "binary"],
                "description": "Installation source"
              },
              "config": {
                "type": "object",
                "description": "Plugin-specific configuration",
                "additionalProperties": true
              }
            }
          }
        },
        "platform": {
          "type": "object",
          "description": "Platform-specific overrides",
          "properties": {
            "darwin": {
              "type": "object",
              "description": "macOS-specific plugin configuration"
            },
            "linux": {
              "type": "object",
              "description": "Linux-specific plugin configuration"
            }
          }
        }
      }
    },
    "generation": {
      "type": "object",
      "description": "Multi-target generation configuration",
      "properties": {
        "targets": {
          "type": "object",
          "description": "IDE/Agent targets. Each target is independent - enabled targets get ALL their features",
          "properties": {
            "claude": {
              "oneOf": [
                { "type": "boolean", "description": "Simple enable/disable (legacy)" },
                {
                  "type": "object",
                  "description": "Claude Code target - generates .claude/, CLAUDE.md, hooks (bash)",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": true,
                      "description": "Enable Claude Code generation"
                    },
                    "output_dir": { "type": "string", "default": ".claude" },
                    "features": {
                      "type": "array",
                      "description": "What to generate for Claude Code",
                      "items": {
                        "type": "string",
                        "enum": ["rules", "hooks", "commands", "docs", "settings", "main"]
                      },
                      "default": ["rules", "hooks", "commands", "docs", "settings", "main"]
                    }
                  }
                }
              ]
            },
            "cursor": {
              "oneOf": [
                { "type": "boolean", "description": "Simple enable/disable (legacy)" },
                {
                  "type": "object",
                  "description": "Cursor IDE target - generates .cursor/, skills, agents, notepads, hooks (js)",
                  "properties": {
                    "enabled": {
                      "type": "boolean",
                      "default": true,
                      "description": "Enable Cursor generation"
                    },
                    "output_dir": { "type": "string", "default": ".cursor" },
                    "features": {
                      "type": "array",
                      "description": "What to generate for Cursor",
                      "items": {
                        "type": "string",
                        "enum": [
                          "rules",
                          "hooks",
                          "commands",
                          "skills",
                          "agents",
                          "notepads",
                          "mcp",
                          "cursorrules"
                        ]
                      },
                      "default": [
                        "rules",
                        "hooks",
                        "commands",
                        "skills",
                        "agents",
                        "notepads",
                        "mcp",
                        "cursorrules"
                      ]
                    }
                  }
                }
              ]
            },
            "kilo": {
              "oneOf": [
                { "type": "boolean", "description": "Simple enable/disable" },
                {
                  "type": "object",
                  "description": "Kilo agent target (future)",
                  "properties": {
                    "enabled": { "type": "boolean", "default": false },
                    "output_dir": { "type": "string", "default": ".kilo" }
                  }
                }
              ]
            }
          }
        },
        "common": {
          "type": "object",
          "description": "Common content shared across all enabled targets",
          "properties": {
            "sdlc_workflow": {
              "type": "boolean",
              "default": true,
              "description": "SDLC workflow (analyze → architect → plan → implement → review)"
            },
            "beads_tracking": {
              "type": "boolean",
              "default": true,
              "description": "Beads task tracking integration"
            },
            "quality_gates": {
              "type": "boolean",
              "default": true,
              "description": "Quality gates hooks"
            },
            "mcp_integration": {
              "type": "boolean",
              "default": true,
              "description": "MCP tools integration"
            }
          }
        },
        "strategy": {
          "type": "string",
          "enum": ["generate", "symlink", "copy"],
          "default": "generate"
        },
        "gitignore_entries": {
          "type": "boolean",
          "default": true,
          "description": "Add generated paths to .gitignore"
        }
      }
    }
  },
  "definitions": {
    "MCPServerConfig": {
      "type": "object",
      "description": "Configuration for an MCP server",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable this MCP server"
        },
        "api_key_env": {
          "type": "string",
          "description": "Environment variable name containing the API key (e.g., 'CONTEXT7_API_KEY')"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "URL for HTTP-based MCP servers"
        },
        "command": {
          "type": "string",
          "description": "Command to run for stdio-based MCP servers (e.g., 'npx', 'node')"
        },
        "args": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Command arguments for stdio-based MCP servers"
        },
        "env": {
          "type": "object",
          "additionalProperties": { "type": "string" },
          "description": "Environment variables to pass to the MCP server"
        }
      }
    }
  }
}
