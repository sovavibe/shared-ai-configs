# Docker Compose for Hindsight MCP Server
# Generated by shared-ai-configs
#
# Deploys:
# - Hindsight (MCP server on ports 8888 and 9999)
# - PostgreSQL (data storage)
# - Redis (caching)
# - Qdrant (vector DB for embeddings)
#
# Usage:
#   docker-compose -f docker-compose.hindsight.yml up -d
#   docker-compose -f docker-compose.hindsight.yml logs -f
#   docker-compose -f docker-compose.hindsight.yml down

version: '3.8'

services:
  postgres:
    image: postgres:16-alpine
    container_name: <%= project.short_name?.toLowerCase() || 'kb' %>-postgres
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: knowledge_base
    ports:
      - '5432:5432'
    volumes:
      - postgres_data:/var/lib/postgresql/data
    healthcheck:
      test: ['CMD-SHELL', 'pg_isready -U postgres']
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - hindsight-network

  redis:
    image: redis:7-alpine
    container_name: <%= project.short_name?.toLowerCase() || 'kb' %>-redis
    ports:
      - '6379:6379'
    volumes:
      - redis_data:/data
    healthcheck:
      test: ['CMD', 'redis-cli', 'ping']
      interval: 5s
      timeout: 5s
      retries: 5
    networks:
      - hindsight-network

  qdrant:
    image: qdrant/qdrant:latest
    container_name: <%= project.short_name?.toLowerCase() || 'kb' %>-qdrant
    ports:
      - '6333:6333'
      - '6334:6334'
    volumes:
      - qdrant_data:/qdrant/storage
    environment:
      QDRANT__SERVICE__GRPC_PORT: 6334
    networks:
      - hindsight-network

  hindsight:
    image: ghcr.io/vectorize-io/hindsight:latest
    container_name: <%= project.short_name?.toLowerCase() || 'kb' %>-hindsight
    pull_policy: always
    ports:
      - '8888:8888'
      - '9999:9999'
    env_file:
      - .env.development.local
    environment:
      POSTGRES_HOST: postgres
      POSTGRES_PORT: 5432
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: knowledge_base
    volumes:
      - ${HOME}/.hindsight-docker:/home/hindsight/.pg0
    networks:
      - hindsight-network
    depends_on:
      postgres:
        condition: service_healthy
      redis:
        condition: service_healthy
    healthcheck:
      test: ['CMD-SHELL', 'curl -f http://localhost:8888/health || exit 1']
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    restart: unless-stopped

volumes:
  postgres_data:
  redis_data:
  qdrant_data:

networks:
  hindsight-network:
    driver: bridge
