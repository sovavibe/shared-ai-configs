# Git Attributes for AI-enhanced projects
# Generated by shared-ai-configs

<% if (services?.task_tracking?.type === 'beads') { -%>
# Beads merge driver for JSONL files
# Requires: git config merge.beads.driver "bd merge %O %A %B"
.beads/issues.jsonl merge=beads
.beads/interactions.jsonl merge=beads
<% } -%>

# Ensure consistent line endings for shell scripts
*.sh text eol=lf

# Ensure consistent line endings for Windows batch files
*.bat text eol=crlf
*.cmd text eol=crlf

# Treat generated files as binary (no diff noise)
<% if (generation?.targets?.claude) { -%>
.claude/mcp.json binary
<% } -%>
<% if (generation?.targets?.cursor) { -%>
.cursor/mcp.json binary
<% } -%>

# Lock files - no merge conflicts, always use theirs
package-lock.json merge=ours
yarn.lock merge=ours
pnpm-lock.yaml merge=ours

# Mark auto-generated files
<% if (stack?.api && (Array.isArray(stack.api) ? stack.api.some(a => a.toLowerCase().includes('orval')) : stack.api?.codegen?.toLowerCase().includes('orval'))) { -%>
src/shared/api/generated/** linguist-generated=true
<% } -%>
