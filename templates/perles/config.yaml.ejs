# Perles Configuration
# Generated by shared-ai-configs

auto_refresh: true

ui:
  show_counts: true
  show_status_bar: true
  vim_mode: false

views:
  - name: Default
    columns:
      - name: Blocked
        query: status = open and blocked = true
        color: '#FF8787'
      - name: Ready
        query: status = open and ready = true
        color: '#73F59F'
      - name: In Progress
        query: status = in_progress
        color: '#54A0FF'

  - name: SDLC Pipeline
    columns:
      - name: Analyze
        query: status = in_progress and labels ~ "phase-analyze"
        color: '#FFA500'
      - name: Architect
        query: status = in_progress and labels ~ "phase-architect"
        color: '#9B59B6'
      - name: Plan
        query: status = in_progress and labels ~ "phase-plan"
        color: '#3498DB'
      - name: Implement
        query: status = in_progress and labels ~ "phase-implement"
        color: '#2ECC71'
      - name: Review
        query: status = in_progress and labels ~ "phase-review"
        color: '#E74C3C'

  - name: SDLC Progress Tracking
    columns:
      - name: Clarifying
        query: status = in_progress and labels ~ "phase-clarify"
        color: '#F39C12'
      - name: Creating Structure
        query: status = in_progress and labels ~ "phase-create-structure"
        color: '#E67E22'
      - name: Analyzing
        query: status = in_progress and labels ~ "phase-sdlc-analyze"
        color: '#FFA500'
      - name: Architecting
        query: status = in_progress and labels ~ "phase-sdlc-architect"
        color: '#9B59B6'
      - name: Planning
        query: status = in_progress and labels ~ "phase-sdlc-plan"
        color: '#3498DB'
      - name: Implementing
        query: status = in_progress and labels ~ "phase-sdlc-implement"
        color: '#2ECC71'
      - name: Testing
        query: status = in_progress and labels ~ "phase-sdlc-test"
        color: '#1ABC9C'
      - name: Reviewing
        query: status = in_progress and labels ~ "phase-sdlc-review"
        color: '#E74C3C'
      - name: Complete
        query: labels ~ "phase-complete"
        color: '#27AE60'

orchestration:
  client: <%= orchestration?.client || 'claude' %>
<% if (orchestration?.client === 'claude' || !orchestration?.client) { %>
  claude:
    model: <%= orchestration?.claude?.model || 'sonnet' %>
<% } %>
<% if (orchestration?.client === 'codex') { %>
  codex:
    model: <%= orchestration?.codex?.model || 'gpt-5.2-codex' %>
<% } %>
