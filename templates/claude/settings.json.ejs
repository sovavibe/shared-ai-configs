{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
<% if (services?.task_tracking?.type === 'beads' || services?.mcp?.hindsight?.enabled) { -%>
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/<%= services?.ide?.paths?.claude || '.claude/' %>hooks/session-start.sh",
            "timeout": 15
          }
        ]
      }
    ],
<% } -%>
<% if (services?.task_tracking?.type === 'beads') { -%>
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/<%= services?.ide?.paths?.claude || '.claude/' %>hooks/workflow-stop.sh",
            "timeout": 30
          }
        ]
      }
    ],
<% } -%>
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/<%= services?.ide?.paths?.claude || '.claude/' %>hooks/validate-bash.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Bash] Done'"
          }
        ]
      }
    ]
  }
}
