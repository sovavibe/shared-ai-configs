# Beads Configuration File
# Generated by shared-ai-configs
# All settings can also be set via environment variables (BD_* prefix)

# Issue prefix for this repository
<%
// Plugin config takes precedence: plugins.install[name=bd].config.project_prefix
// Then services.task_tracking.key_prefix
// Then project.short_name
// Then default 'VP'
const prefix = (_pluginConfig?.config?.project_prefix) ||
  services.task_tracking?.key_prefix?.replace('-', '') ||
  project.short_name ||
  'VP';
-%>
issue-prefix: '<%= prefix %>'

# Auto-start daemon if not running
auto-start-daemon: true

# Debounce interval for auto-flush
flush-debounce: '5s'

# Git branch for beads commits (bd sync will commit to this branch)
# Uses git worktree - doesn't affect main branch
sync-branch: "beads-sync"
