# AI Project Environment Variables
# NEVER commit this file with real tokens to git
# Fill in your API keys and tokens for MCP services

# ============================================
# MCP Server API Keys
# ============================================

<% if (services.mcp && services.mcp.snyk && services.mcp.snyk.enabled) { -%>
# Snyk - Security scanning
# Get token from: https://app.snyk.io/account
SNYK_TOKEN=

<% } -%>
<% if (services.mcp && services.mcp.figma && services.mcp.figma.enabled) { -%>
# Figma - Design to code
# Get token from: Figma > Settings > Personal access tokens
FIGMA_API_KEY=

<% } -%>
<% if (services.mcp && services.mcp.browser && services.mcp.browser.enabled) { -%>
# Z.AI Services (zai-mcp-server, web-search, web-reader, zread)
# Get token from: https://z.ai/dashboard
Z_AI_API_KEY=
Z_AI_MODE=ZAI

<% } -%>
<% if (services.mcp && services.mcp.hindsight && services.mcp.hindsight.enabled) { -%>
# Hindsight MCP - Memory server
# Configure LLM provider for reflections (optional)
# HINDSIGHT_API_LLM_API_KEY=sk-...
# HINDSIGHT_API_LLM_MODEL=gpt-4o
# HINDSIGHT_API_LLM_BASE_URL=https://api.openai.com/v1
# HINDSIGHT_API_LLM_PROVIDER=openai

<% } -%>
<% if (services.mcp && services.mcp.memory_bank && services.mcp.memory_bank.enabled) { -%>
# Memory Bank - Project memory
MEMORY_BANK_ROOT=.memory

<% } -%>
<% if (services.mcp && services.mcp.mcp_docker && services.mcp.mcp_docker.enabled) { -%>
# MCP Docker Gateway (includes Context7)
CONTEXT7_API_KEY=

<% } -%>
# ============================================
# Task Tracking
# ============================================

<% if (services.task_tracking && services.task_tracking.type === 'jira') { -%>
# Jira/Atlassian Configuration
# Integration mode: <%= services.task_tracking.integration_mode || 'cli' %> (mcp = mcp-atlassian, cli = jira-cli)
<% if (services.task_tracking.integration_mode === 'mcp') { -%>
# MCP mode (mcp-atlassian via uvx)
# Required: pip install uv OR brew install uv
JIRA_URL=https://<%= services.task_tracking.jira?.instance || 'your-company.atlassian.net' %>
JIRA_USERNAME=user@company.com
JIRA_API_TOKEN=ATATT3x...

# Optional: Confluence integration (same server)
# CONFLUENCE_URL=https://<%= services.task_tracking.jira?.instance || 'your-company.atlassian.net' %>/wiki
# CONFLUENCE_USERNAME=user@company.com
# CONFLUENCE_API_TOKEN=ATATT3x...
<% } else { -%>
# CLI mode (jira-cli via brew)
# Required: brew install jira-cli && jira init
JIRA_API_TOKEN=ATATT3x...
# After setting token, run: jira init (select Cloud or Server)
<% } -%>

# Common Jira settings
JIRA_PROJECT=<%= services.task_tracking.key_prefix?.replace('-', '') || 'PROJ' %>

<% } -%>
# ============================================
# VCS Integration
# ============================================

<% if (services.vcs && services.vcs.type === 'gitlab') { -%>
# GitLab Configuration
# Integration mode: <%= services.vcs.integration_mode || 'cli' %> (mcp = GitLab MCP, cli = glab CLI)
# Get token from: GitLab > User Settings > Access Tokens
GITLAB_TOKEN=glpat-xxxxxxxxxxxx
GITLAB_URL=https://<%= services.vcs.group ? services.vcs.group.split('/')[0] + '.com' : 'gitlab.com' %>
<% if (services.vcs.project_id) { -%>
GITLAB_PROJECT_ID=<%= services.vcs.project_id %>
<% } -%>
GITLAB_PROJECT=<%= services.vcs.group || 'namespace' %>/<%= project.short_name || project.name %>

<% } -%>
<% if (services.vcs && services.vcs.type === 'github') { -%>
# GitHub Configuration
# Integration mode: <%= services.vcs.integration_mode || 'cli' %> (mcp = GitHub MCP, cli = gh CLI)
# Usually authenticated via gh CLI, token optional
# GITHUB_TOKEN=ghp_xxxxxxxxxxxx

<% } -%>
