# AI Project Environment Variables
# NEVER commit this file with real tokens to git
# Fill in your API keys and tokens for MCP services

# ============================================
# MCP Server API Keys
# ============================================

<% if (services.mcp && services.mcp.context7 && services.mcp.context7.enabled) { -%>
# Context7 - Library documentation lookup
CONTEXT7_API_KEY=

<% } -%>
<% if (services.mcp && services.mcp.snyk && services.mcp.snyk.enabled) { -%>
# Snyk - Security scanning
# Get token from: https://app.snyk.io/account
SNYK_TOKEN=

<% } -%>
<% if (services.mcp && services.mcp.figma && services.mcp.figma.enabled) { -%>
# Figma - Design to code
# Get token from: Figma > Settings > Personal access tokens
FIGMA_API_KEY=

<% } -%>
<% if (services.mcp && services.mcp.browser && services.mcp.browser.enabled) { -%>
# Browser MCP (claude-in-chrome)
Z_AI_MODE=browser
Z_AI_API_KEY=

<% } -%>
<% if (services.mcp && services.mcp.zread && services.mcp.zread.enabled) { -%>
# Z.ai MCP Services (zread, web-search, zai-mcp-server)
# Get token from: https://z.ai/dashboard
Z_AI_API_KEY=

<% } -%>
<% if (services.mcp && services.mcp.hindsight && services.mcp.hindsight.enabled) { -%>
# Hindsight - Memory server (local, no token needed if running locally)
# HINDSIGHT_URL=http://localhost:8888

<% } -%>
<% if (services.mcp && services.mcp.memory_bank && services.mcp.memory_bank.enabled) { -%>
# Memory Bank - Project memory
MEMORY_BANK_ROOT=.memory

<% } -%>
# ============================================
# Task Tracking
# ============================================

<% if (services.task_tracking && services.task_tracking.type === 'beads') { -%>
# Beads integration
BD_ENABLED=1

<% } -%>
<% if (services.task_tracking && services.task_tracking.type === 'jira') { -%>
# Jira integration
JIRA_API_TOKEN=
JIRA_EMAIL=
JIRA_INSTANCE=<%= services.task_tracking.jira?.instance || 'your-company.atlassian.net' %>

<% } -%>
# ============================================
# VCS Integration
# ============================================

<% if (services.vcs && services.vcs.type === 'gitlab') { -%>
# GitLab
GITLAB_TOKEN=
GITLAB_HOST=gitlab.com

<% } -%>
<% if (services.vcs && services.vcs.type === 'github') { -%>
# GitHub (usually authenticated via gh CLI)
# GITHUB_TOKEN=

<% } -%>
# ============================================
# Optional: PAL MCP (Multi-model orchestration)
# ============================================

# OpenAI API Key (for PAL MCP multi-model)
# OPENAI_API_KEY=

# ============================================
# Development
# ============================================

# Dev server port
<% if (options && options.dev_server_port) { -%>
PORT=<%= options.dev_server_port %>
<% } else { -%>
# PORT=5173
<% } -%>
