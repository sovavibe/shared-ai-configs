{
  "name": "shared-ai-configs",
  "version": "1.0.0",
  "description": "Shared AI configurations generator for Claude Code and Cursor IDE",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "shared-ai-configs": "./bin/cli.js",
    "sac": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:md": "markdownlint '**/*.md' '**/*.mdc' --ignore node_modules --ignore dist",
    "lint:md:fix": "markdownlint '**/*.md' '**/*.mdc' --fix --ignore node_modules --ignore dist",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "quality": "npm run lint && npm run lint:md && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run lint:md:fix && npm run format",
    "prepare": "husky",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ai",
    "claude",
    "cursor",
    "config",
    "generator",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "files": [
    "dist/",
    "bin/",
    "content/",
    "templates/",
    "core/",
    "stacks/",
    "integrations/",
    "hooks/",
    "workflows/",
    "schema/"
  ],
  "dependencies": {
    "ajv": "^8.12.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "ejs": "^3.1.10",
    "js-yaml": "^4.1.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/ejs": "^3.1.5",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "markdownlint-cli": "^0.39.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{md,mdc}": [
      "markdownlint --fix"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
